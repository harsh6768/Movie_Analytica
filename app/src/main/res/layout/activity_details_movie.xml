<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sourcey.materiallogindemo.DetailsMovie"
    android:background="@drawable/whitebg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/detail_moviePosterId"
        android:layout_width="319dp"
        android:layout_height="360dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg" />

    <TextView
        android:id="@+id/detail_movieNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_moviePosterId"
        android:layout_centerHorizontal="true"
        android:text="movie_name"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/detail_descId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="248dp"
        android:text="description"
        android:textColor="#000"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/detail_ratingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="218dp"
        android:text="ratings"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/detail_genreId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="191dp"
        android:text="genres"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/detail_release_dateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="159dp"
        android:text="releasedate"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/details_movieLengthId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="118dp"
        android:text="movielength"
        android:textColor="#000"/>

    <Button
        android:id="@+id/detail_savebtnId"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:text="Back to Home"
        />



</RelativeLayout>
