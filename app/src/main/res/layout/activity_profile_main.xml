<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_circleImageId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myreminder"
    tools:context="com.sourcey.materiallogindemo.ProfileMain"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_toolbarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/profile_toolbarColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/profile_catlogId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="View Catalog"
        android:textColor="#CC1D1D"
        android:textSize="16dip"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/profile_imageId"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/profile_imageId"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.046" />

    <ImageView
        android:id="@+id/view_profileId"
        android:layout_width="122dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_imageId"
        app:layout_constraintTop_toBottomOf="@+id/profile_catlogId"
        app:srcCompat="@drawable/btnprofile" />


    <ImageView
        android:id="@+id/addMovieId"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onAddMovies"
        app:layout_constraintEnd_toEndOf="@+id/view_profileId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_profileId"
        app:layout_constraintTop_toBottomOf="@+id/view_profileId"
        app:srcCompat="@drawable/btnmovies" />


    <ImageView
        android:id="@+id/remindBtn"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_imageId"
        app:layout_constraintStart_toStartOf="@+id/addMovieId"
        app:layout_constraintTop_toBottomOf="@+id/addMovieId"
        app:srcCompat="@drawable/btnremind" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_imageId"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_toolbarId" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_imageId"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/profile_imageId"
        app:layout_constraintTop_toBottomOf="@+id/profile_imageId" />


</android.support.constraint.ConstraintLayout>
